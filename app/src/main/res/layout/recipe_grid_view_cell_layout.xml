<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/recipePicture"
        android:src="@drawable/recipe_example_pic_medium"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:adjustViewBounds="true"
        android:contentDescription="recipe_pic" />



    <View
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@drawable/gradient"
        android:layout_alignBottom="@id/recipePicture"/>


    <TextView
        android:id="@+id/recipeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recipe Label"
        android:textColor="#ffffff"
        android:textSize="@dimen/abc_text_size_menu_material"
        android:layout_alignBottom="@+id/recipePicture"
        android:layout_alignParentStart="true"
        android:textStyle="normal" />

</RelativeLayout>