    <TextView android:id="@+id/usedIngredientCount_popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Used Ingredients: "
        android:textColor="#FFF"
        android:textSize="@dimen/abc_text_size_medium_material" />

    <TextView android:id="@+id/missedIngredientCount_popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Missed Ingredients: "
        android:layout_below="@id/usedIngredientCount_popup"
        android:textColor="#FFF"
        android:textSize="@dimen/abc_text_size_medium_material" />

    <TextView android:id="@+id/likes_popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Likes: "
        android:layout_below="@id/missedIngredientCount_popup"
        android:textColor="#FFF"
